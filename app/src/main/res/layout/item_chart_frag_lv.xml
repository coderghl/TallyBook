<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:padding="10dp">

  <ImageView
    android:id="@+id/item_chart_frag_iv"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_marginRight="8dp"
    android:src="@mipmap/ic_canyin_fs" />

  <TextView
    android:id="@+id/item_chart_frag_tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@id/item_chart_frag_iv"
    android:text="标题"
    android:textColor="#000"
    android:textSize="16sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/item_chart_frag_tv_pert"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:text="20.0%"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/item_chart_frag_tv_total"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:text="¥200.02"
    android:textSize="16sp" />
</RelativeLayout>